generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Unit {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
}

model Product {
  id          String         @id @default(cuid())
  sku         String         @unique
  name        String
  category    Category?      @relation(fields: [categoryId], references: [id])
  categoryId  String?
  type        String
  unit        Unit?          @relation(fields: [unitId], references: [id])
  unitId      String?
  costPrice   Int            @default(0)
  price       Int
  stock       Int            @default(0)
  salesItems  TransactionItem[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model SalesPerson {
  id          String   @id @default(cuid())
  name        String
  phone       String
  company     String
  products    String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Warehouse {
  id          String    @id @default(cuid())
  productName String
  type        String    // "masuk" atau "keluar"
  quantity    Int
  date        DateTime  @default(now())
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Transaction {
  id           String             @id @default(cuid())
  code         String             @unique
  totalPayment Int
  change       Int
  totalItems   Int
  profit       Int
  deletedAt    DateTime?
  createdAt    DateTime           @default(now())
  items        TransactionItem[]
}

model TransactionItem {
  id            String       @id @default(cuid())
  quantity      Int
  price         Int
  subtotal      Int
  product       Product      @relation(fields: [productId], references: [id])
  productId     String
  transaction   Transaction  @relation(fields: [transactionId], references: [id])
  transactionId String
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("staff")
  lastLoginAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


