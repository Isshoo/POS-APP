generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String         @id @default(cuid())
  sku         String         @unique
  name        String
  category    String
  type        String
  unit        String
  price       Int
  stock       Int            @default(0)
  deletedAt   DateTime?
  salesItems  TransactionItem[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model SalesPerson {
  id          String   @id @default(cuid())
  name        String
  phone       String
  company     String
  clients     Int      @default(0)
  deletedAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Warehouse {
  id          String    @id @default(cuid())
  productName String
  type        String    // "masuk" atau "keluar"
  quantity    Int
  date        DateTime  @default(now())
  notes       String?
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Transaction {
  id           String             @id @default(cuid())
  code         String             @unique
  totalPayment Int
  change       Int
  totalItems   Int
  profit       Int
  deletedAt    DateTime?
  createdAt    DateTime           @default(now())
  items        TransactionItem[]
}

model TransactionItem {
  id            String       @id @default(cuid())
  quantity      Int
  price         Int
  subtotal      Int
  product       Product      @relation(fields: [productId], references: [id])
  productId     String
  transaction   Transaction  @relation(fields: [transactionId], references: [id])
  transactionId String
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("staff")
  lastLoginAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


